

<h1>RESTAURANTS</h1>
<section>
    {{#each restaurants}}
    <a href="/restaurants/{{this.id}}">
        <article>
            <div class="image">
                <header style="background-image: url({{this.image}});" width="300" height="400";></header>
            </div>
            <main>{{this.name}}</main>
            <footer>{{this.menus.length}} menus</footer>
        </article>
    </a>
    {{/each}}
</section>